<html lang="en">
  <head>
    <script
      src="https://www.gstatic.com/firebasejs/8.0.2/firebase-app.js"
    ></script>
    <script
      src="https://www.gstatic.com/firebasejs/8.0.2/firebase-auth.js"
    ></script>
    <script
      src="https://www.gstatic.com/firebasejs/8.0.2/firebase-storage.js"
